<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Buku</h2>
      <a href="/book/add" class="btn btn-primary mb-2"
        >Tambah Data Buku</a
      >
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Judul</th>
            <th scope="col">Tema</th>
            <th scope="col">Nama Pengarang</th>
            <th scope="col">Tahun Terbit</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (books.length === 0) { %>
            <tr>
              <td colspan="5">
                <div class="alert alert-danger fw-bold" role="alert">
                  Data Buku Masih Kosong!!! <br />
                </div>
              </td>
            </tr> 
         <% } %> <% books.forEach((book,i) => { i++ %> 
          <tr>
            <th scope="row"><%= i++ %> </th>
            <td><%= book.judul %> </td>
            <td><%= book.tema %> </td>
            <td><%= book.nmPengarang %> </td>
            <td><%= book.thTerbit %> </td>
            <td>
              <a
                href="/book/<%= book.judul %> "
                class="btn btn-success badge rounded-pill"
                ><i class="bi bi-info-circle"></i>detail</a
              >
            </td>
          </tr>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
